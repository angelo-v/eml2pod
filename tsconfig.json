    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "strict": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
